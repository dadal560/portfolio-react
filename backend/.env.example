# FLASK CONFIGURATION

# Environment (development, production, testing)
FLASK_ENV=production

# Secret Key - CRITICAL: Generate a strong random key
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_secret_key_here_minimum_32_characters_random

# CORS CONFIGURATION

# Allowed origins (comma-separated for multiple)
# Development: http://localhost:5173
# Production: https://votredomaine.com
CORS_ORIGINS=https://votredomaine.com,https://www.votredomaine.com

# EMAIL CONFIGURATION

# SMTP Server
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# Email credentials
# For Gmail: Use App Password, not regular password
# https://support.google.com/accounts/answer/185833
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here

# Default sender (optional, defaults to MAIL_USERNAME)
MAIL_DEFAULT_SENDER=your_email@gmail.com

# Recipients (comma-separated for multiple)
MAIL_RECIPIENTS=contact@votredomaine.com,admin@votredomaine.com

# Email timeout in seconds
MAIL_TIMEOUT=10

# GUNICORN CONFIGURATION (Optional)

# Number of workers (default: (CPU cores * 2) + 1)
# GUNICORN_WORKERS=4

# Worker class (sync, gevent, eventlet)
# GUNICORN_WORKER_CLASS=sync

# Bind address (default: 127.0.0.1:8000)
# GUNICORN_BIND=127.0.0.1:8000

# Timeout in seconds
# GUNICORN_TIMEOUT=30

# Log level (debug, info, warning, error, critical)
# GUNICORN_LOG_LEVEL=info

# RATE LIMITING
# Rate limit storage (memory://, redis://localhost:6379)
RATELIMIT_STORAGE_URL=memory://

# LOGGING
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=app.log

# SECURITY NOTES

# 1. NEVER commit .env file to git
# 2. Use strong, random SECRET_KEY (min 32 chars)
# 3. Use App Passwords for Gmail (not regular password)
# 4. Restrict CORS_ORIGINS to your actual domain
# 5. Keep FLASK_ENV=production in production
# 6. Use HTTPS in production
# 7. Change default passwords and keys